<div data-ng-controller="clienteController" class="container" style="margin-top: 16px;">
    <div class="row">
        <div data-ng-show="addMode" class="col-md-5 col-sm-offset-3 container-add">
            <h3>Novo Cliente</h3>
            <strong class="error">{{ error }}</strong>
            <form name="addCliente" data-ng-show="addMode" class="form-horizontal" style="margin: 0px auto;">
                <div class="form-group">
                    <label for="nome" class="col-sm-2 control-label">Nome:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="nome" placeholder="Entre com o nome do Cliente" data-ng-model="novoCliente.Nome" required/>
                    </div>
                </div>
                <div class="form-group">
                    <label for="telefone" class="col-sm-2 control-label">Telefone:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="telefone" placeholder="Entre com o telefone do Cliente" data-ng-model="novoCliente.Telefone" telefone-dir/>
                    </div>
                </div>
                <div class="form-group">
                    <label for="endereco" class="col-sm-2 control-label">Endereço:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="endereco" placeholder="Entre com o endereço do Cliente" data-ng-model="novoCliente.Endereco"/>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-5 col-sm-10">
                        <input type="submit" value="Adicionar" data-ng-click="add()" data-ng-disabled="!addCliente.$valid" class="btn btn-primary"/>
                        <input type="button" value="Cancelar" data-ng-click="toggleAdd()" class="btn btn-primary"/>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <p data-ng-hide="addMode"><a data-ng-click="toggleAdd()" href="javascript:;" class="btn btn-primary">Adicionar Cliente</a></p>
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <tr>
                        <th></th>
                        <th>Nome</th>
                        <th>Telefone</th>
                        <th>Endereço</th>
                        <th>Operações</th>
                    </tr>
                    <tr data-ng-repeat="cliente in clientes">
                        <td><strong data-ng-hide="true">{{ cliente.Id }}</strong></td>
                        <td>
                            <p data-ng-hide="cliente.editMode">{{ cliente.Nome }}</p>
                            <input data-ng-show="cliente.editMode" type="text" data-ng-model="cliente.Nome" />
                        </td>
                        <td>
                            <p data-ng-hide="cliente.editMode">{{ cliente.Telefone }}</p>
                            <input data-ng-show="cliente.editMode" type="text" data-ng-model="cliente.Telefone" telefone-dir />
                        </td>
                        <td>
                            <p data-ng-hide="cliente.editMode">{{ cliente.Endereco }}</p>
                            <input data-ng-show="cliente.editMode" type="text" data-ng-model="cliente.Endereco" />
                        </td>
                        <td>
                            <p data-ng-hide="cliente.editMode"><a data-ng-click="toggleEdit(cliente)" href="javascript:;">Editar</a> | <a data-ng-click="deleteCliente(cliente)" href="javascript:;">Excluir</a></p>
                            <p data-ng-show="cliente.editMode"><a data-ng-click="save(cliente)" href="javascript:;">Salvar</a> | <a data-ng-click="toggleEdit(cliente)" href="javascript:;">Cancelar</a></p>
                        </td>
                    </tr>
                </table>
                <hr />
            </div>
        </div>
    </div>
    <div id="mydiv" data-ng-show="loading">
        <img src="~/Images/ajax-loader.gif" class="ajax-loader" />
    </div>
</div>